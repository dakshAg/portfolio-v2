  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime())
  .slice(0, 3);

// Get recent gallery items (limit to 3 most recent)
const recentGalleryItems = (await getCollection('gallery'))
