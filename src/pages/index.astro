    <!-- Separator -->
    <div class="border-b border-border"></div>

    <!-- Education Section -->
    <section class="space-y-6">
      <h2 class="text-2xl font-semibold">Education</h2>
      <div class="space-y-4">
        <div class="flex items-start gap-6">
          <div class="flex-shrink-0">
            <img 
              src="/images/graduation-hat.png" 
              alt="Education" 
              class="w-20 h-20 rounded-lg"
            />
          </div>
          <div class="space-y-2 flex-1">
            <h3 class="font-semibold text-lg">University of Melbourne ‚Äî B.Sc. Data Science</h3>
            <p class="text-muted-foreground">
              First Class Honours (H1), Dean's Honours List
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Separator -->
    <div class="border-b border-border"></div>

    <!-- Writing Section -->
    <section class="space-y-6">
      <div class="flex items-center justify-between">
        <h2 class="text-2xl font-semibold">Writing</h2>
        <a href="/blog" class="text-sm text-primary hover:text-primary/80 font-medium transition-colors">
          View all ‚Üí
        </a>
      </div>

      <div class="space-y-6">
        {recentBlogPosts.map((post) => (
          <article class="group border-b border-border pb-6 last:border-b-0 last:pb-0">
            <div class="flex gap-4">
              <!-- Hero Image (if exists) -->
              {post.data.heroImage && (
                <div class="flex-shrink-0">
                  <img
                    src={post.data.heroImage}
                    alt={post.data.title}
                    class="w-20 h-20 sm:w-24 sm:h-24 object-cover rounded-lg"
                  />
                </div>
              )}

              <!-- Content -->
              <div class="flex-1 min-w-0 space-y-2">
                <h3 class="font-semibold text-lg group-hover:text-primary transition-colors">
                  <a href={`/blog/${post.slug}`} class="block">
                    {post.data.title}
                  </a>
                </h3>
                <p class="text-muted-foreground text-sm leading-relaxed line-clamp-2">
                  {post.data.description}
                </p>
                <div class="flex items-center gap-2 text-xs text-muted-foreground">
                  <time datetime={post.data.pubDate.toISOString()}>
                    {post.data.pubDate.toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'short',
                      day: 'numeric'
                    })}
                  </time>
                  {post.data.tags && post.data.tags.length > 0 && (
                    <>
                      <span>‚Ä¢</span>
                      <div class="flex gap-1">
                        {post.data.tags.slice(0, 2).map((tag) => (
                          <span class="px-1.5 py-0.5 bg-secondary text-secondary-foreground rounded text-xs">
                            {tag}
                          </span>
                        ))}
                        {post.data.tags.length > 2 && (
                          <span class="text-muted-foreground">+{post.data.tags.length - 2}</span>
                        )}
                      </div>
                    </>
                  )}
                </div>
              </div>
            </div>
          </article>
        ))}

        {recentBlogPosts.length === 0 && (
          <div class="text-center py-8">
            <div class="text-4xl mb-2">üìù</div>
            <p class="text-muted-foreground text-sm">
              Blog posts coming soon...
            </p>
          </div>
        )}
      </div>
    </section>

    <!-- Footer spacing -->
    <div class="py-8"></div>
