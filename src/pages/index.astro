        <!-- Ship or be forgotten -->
        <div class="flex flex-col items-center text-center space-y-4 p-4">
          <div class="flex-shrink-0">
            <img
              src="/images/values/ship.png"
              alt="Ship or be forgotten"
              class="w-24 h-24 md:w-28 md:h-28"
            />
          </div>
          <div class="space-y-2">
            <h3 class="font-semibold text-lg">Ship or be forgotten</h3>
            <p class="text-muted-foreground text-sm italic leading-relaxed">
              "Good artists copy, great artists steal, real artists ship."
            </p>
          </div>
        </div>
      </div>
    </section>

