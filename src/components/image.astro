---
export interface Props {
  name: string;
  description: string;
  image: string;
  url: string;
}

const { name, description, image, url } = Astro.props;
---

<a href={url} class="block overflow-hidden rounded-lg shadow-lg">
  <img
    src={image}
    alt={name}
    class="object-cover w-full h-48 transition-transform duration-300 hover:scale-105"
  />
  <div class="p-4">
    <h3 class="text-lg font-semibold text-neutral-800 dark:text-neutral-100">
      {name}
    </h3>
    <p class="text-sm text-neutral-600 dark:text-neutral-400">
      {description}
    </p>
  </div>
</a>
