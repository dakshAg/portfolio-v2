---
import skills from "../../collections/skills.json";

interface Skill {
  name: string;
  image: string;
}

interface SkillCategory {
  [key: string]: Skill[];
}

const skillsData: SkillCategory = skills;
---

<section class="max-w-4xl mx-auto px-7 lg:px-0">
  <h2
    class="text-2xl font-bold leading-10 tracking-tight text-neutral-900 dark:text-neutral-100"
  >
    Skills & Expertise
  </h2>
  <p class="mb-6 text-base text-neutral-600 dark:text-neutral-400">
    Here are some of the key skills and technologies I have experience with:
  </p>
  
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-7 mt-7">
    {Object.entries(skillsData).map(([title, items]) => (
      <div class="mb-8">
        <h3 class="text-xl font-semibold text-neutral-900 dark:text-neutral-100 mb-3">
          {title}
        </h3>
        <ul class="list-none text-neutral-700 dark:text-neutral-400">
          {items.map(({ name, image }) => (
            <li class="flex items-center mb-2">
              <img
                src={image}
                alt={name}
                class="w-6 h-6 mr-3 object-contain"
              />
              {name}
            </li>
          ))}
        </ul>
      </div>
    ))}
  </div>
</section>
