---
import images from "../../collections/images.json";
import Button from "../button.astro";
import AstroImage from "../image.astro";
---

<section class="max-w-6xl mx-auto px-7 lg:px-0">
  <h2
    class="text-2xl font-bold leading-10 tracking-tight text-neutral-900 dark:text-neutral-100"
  >
    Recent Updates
  </h2>
  <p class="mb-6 text-base text-neutral-600 dark:text-neutral-400">
    Last updated on Tuesday, 22nd October 2024.
  </p>
  <div
    class="grid items-stretch w-full sm:grid-cols-2 md:grid-cols-3 gap-7 mt-7"
  >
    {
      images.map((image) => {
        return (
          <AstroImage
            name={image.name}
            description={image.description}
            image={image.image}
            url={image.url}
          />
        )
      })
    }
  </div>

</section>
