---
import "../styles/globals.css";
import TopBar from "../components/top-bar.astro";
import Footer from "../components/footer.astro";
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content="Daksh Agrawal - Founder's relentless energy, merchant's instinct, engineer's craft, analyst's eye." />
    
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <Fragment set:html={import.meta.env.HEADER_INJECT} />
  </head>
  <body class="min-h-screen flex flex-col antialiased bg-background text-foreground font-quicksand">
    <TopBar />
    <main id="main-content" class="flex-1">
      <slot />
    </main>
    <Footer />
    <Fragment set:html={import.meta.env.FOOTER_INJECT} />
  </body>
</html>
